@page
@model Assignment3.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Categories Management";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-tags"></i> Categories Management</h2>
            <p class="text-muted">Manage event categories for better organization</p>
        </div>
        <div>
            <a asp-page="/Categories/Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Category
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h3>@Model.Categories.Count</h3>
                    <p class="mb-0">Total Categories</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3>@Model.Categories.Count(c => c.EventCount > 0)</h3>
                    <p class="mb-0">Active Categories</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h3>@Model.Categories.Sum(c => c.EventCount)</h3>
                    <p class="mb-0">Total Events</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h3>@Model.Categories.Count(c => c.EventCount == 0)</h3>
                    <p class="mb-0">Unused Categories</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-header">
            <h5><i class="fas fa-search"></i> Search & Filter</h5>
        </div>
        <div class="card-body">
            <form method="get">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Search Categories</label>
                            <input asp-for="SearchTerm" class="form-control" placeholder="Search by category name..." />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Filter</label>
                            <select asp-for="FilterType" class="form-control">
                                <option value="">All Categories</option>
                                <option value="active">Active (Has Events)</option>
                                <option value="inactive">Inactive (No Events)</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary btn-block">
                                    <i class="fas fa-search"></i> Search
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Categories Table -->
    <div class="card">
        <div class="card-header">
            <h5><i class="fas fa-table"></i> All Categories (@Model.Categories.Count total)</h5>
        </div>
        <div class="card-body">
            @if (Model.Categories.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="categoriesTable">
                        <thead class="thead-dark">
                            <tr>
                                <th><i class="fas fa-tag"></i> Category Name</th>
                                <th class="text-center"><i class="fas fa-calendar"></i> Events Count</th>
                                <th class="text-center"><i class="fas fa-clock"></i> Created Date</th>
                                <th class="text-center"><i class="fas fa-chart-line"></i> Status</th>
                                <th class="text-center"><i class="fas fa-cog"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model.Categories)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center me-3" 
                                                 style="width: 40px; height: 40px;">
                                                <i class="fas fa-tag"></i>
                                            </div>
                                            <div>
                                                <strong>@category.CategoryName</strong>
                                                <br />
                                                <small class="text-muted">ID: @category.CategoryID</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        @if (category.EventCount > 0)
                                        {
                                            <span class="badge badge-success">@category.EventCount Events</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">No Events</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div>@category.CreatedDate.ToString("MMM dd, yyyy")</div>
                                        <small class="text-muted">@category.CreatedDate.ToString("h:mm tt")</small>
                                    </td>
                                    <td class="text-center">
                                        @if (category.EventCount > 0)
                                        {
                                            <span class="badge badge-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">Unused</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-page="/Categories/Edit" asp-route-id="@category.CategoryID" class="btn btn-outline-warning" title="Edit Category">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            @if (category.EventCount == 0)
                                            {
                                                <a asp-page="/Categories/Delete" asp-route-id="@category.CategoryID" class="btn btn-outline-danger" title="Delete Category">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <button class="btn btn-outline-secondary" disabled title="Cannot delete category with events">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-tags fa-4x text-muted mb-3"></i>
                    <h4>No Categories Found</h4>
                    <p class="text-muted">No categories match your search criteria.</p>
                    <a asp-page="/Categories/Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create First Category
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            if ($('#categoriesTable').length) {
                $('#categoriesTable').DataTable({
                    "pageLength": 15,
                    "order": [[ 0, "asc" ]], // Sort by name ascending
                    "responsive": true,
                    "language": {
                        "search": "Search categories:",
                        "lengthMenu": "Show _MENU_ categories per page",
                        "info": "Showing _START_ to _END_ of _TOTAL_ categories"
                    }
                });
            }
        });
    </script>
} 