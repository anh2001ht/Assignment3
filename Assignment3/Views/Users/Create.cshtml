@model Assignment3.ViewModels.CreateUserViewModel

@{
    ViewData["Title"] = "Create User";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-user-plus"></i> Create New User</h2>
            <p class="text-muted">Add a new user to the system</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-user-plus"></i> User Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Username" class="form-label">
                                        <i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Username)
                                    </label>
                                    <input asp-for="Username" class="form-control" placeholder="Enter username" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                    <small class="form-text text-muted">Username must be unique</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Password" class="form-label">
                                        <i class="fas fa-lock"></i> @Html.DisplayNameFor(model => model.Password)
                                    </label>
                                    <input asp-for="Password" class="form-control" placeholder="Enter password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <small class="form-text text-muted">Minimum 6 characters required</small>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="FullName" class="form-label">
                                <i class="fas fa-id-card"></i> @Html.DisplayNameFor(model => model.FullName)
                            </label>
                            <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="form-label">
                                        <i class="fas fa-envelope"></i> @Html.DisplayNameFor(model => model.Email)
                                    </label>
                                    <input asp-for="Email" class="form-control" placeholder="Enter email address" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <small class="form-text text-muted">Optional but recommended</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Role" class="form-label">
                                        <i class="fas fa-shield-alt"></i> @Html.DisplayNameFor(model => model.Role)
                                    </label>
                                    <select asp-for="Role" class="form-control">
                                        <option value="">Select Role</option>
                                        <option value="User">User</option>
                                        <option value="EventManager">Event Manager</option>
                                        <option value="Admin">Admin</option>
                                    </select>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                    <small class="form-text text-muted">Defines user permissions</small>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-4">
                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Create User
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Role Information -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6><i class="fas fa-info-circle"></i> Role Descriptions</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="text-center">
                                <span class="badge badge-primary mb-2">User</span>
                                <p class="small">Can register for events and view their own registrations</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <span class="badge badge-warning mb-2">Event Manager</span>
                                <p class="small">Can create and manage events, view attendee lists</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <span class="badge badge-danger mb-2">Admin</span>
                                <p class="small">Full system access including user management and reports</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 