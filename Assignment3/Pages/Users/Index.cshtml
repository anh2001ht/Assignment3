@page
@model Assignment3.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Users Management";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-users"></i> Users Management</h2>
            <p class="text-muted">Manage system users and their access</p>
        </div>
        <div>
            <a asp-page="/Users/Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New User
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h3>@Model.Users.Count</h3>
                    <p class="mb-0">Total Users</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3>@Model.Users.Where(u => u.Role == "Admin").Count()</h3>
                    <p class="mb-0">Administrators</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h3>@Model.Users.Where(u => u.Role == "EventManager").Count()</h3>
                    <p class="mb-0">Event Managers</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h3>@Model.Users.Where(u => u.TotalRegistrations > 0).Count()</h3>
                    <p class="mb-0">Active Users</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-header">
            <h5><i class="fas fa-search"></i> Search & Filter</h5>
        </div>
        <div class="card-body">
            <form method="get">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Search</label>
                            <input asp-for="SearchTerm" class="form-control" placeholder="Search by name, username, or email..." />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Role</label>
                            <select asp-for="RoleFilter" class="form-control">
                                <option value="">All Roles</option>
                                <option value="Admin">Admin</option>
                                <option value="EventManager">Event Manager</option>
                                <option value="User">User</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Activity</label>
                            <select asp-for="ActivityFilter" class="form-control">
                                <option value="">All Users</option>
                                <option value="active">Active Users</option>
                                <option value="inactive">Inactive Users</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary btn-block">
                                    <i class="fas fa-search"></i> Search
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card">
        <div class="card-header">
            <h5><i class="fas fa-table"></i> All Users (@Model.Users.Count total)</h5>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="usersTable">
                        <thead class="thead-dark">
                            <tr>
                                <th><i class="fas fa-user"></i> User</th>
                                <th class="text-center"><i class="fas fa-envelope"></i> Email</th>
                                <th class="text-center"><i class="fas fa-shield-alt"></i> Role</th>
                                <th class="text-center"><i class="fas fa-calendar-check"></i> Registrations</th>
                                <th class="text-center"><i class="fas fa-calendar-alt"></i> Upcoming Events</th>
                                <th class="text-center"><i class="fas fa-clock"></i> Last Activity</th>
                                <th class="text-center"><i class="fas fa-cog"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar avatar-sm me-3">
                                                <div class="avatar-initial rounded-circle bg-primary text-white">
                                                    @(user.FullName?.FirstOrDefault().ToString().ToUpper() ?? "?")
                                                </div>
                                            </div>
                                            <div>
                                                <strong>@user.FullName</strong>
                                                <br />
                                                <small class="text-muted">@user.Username</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        @if (!string.IsNullOrEmpty(user.Email))
                                        {
                                            <a href="mailto:@user.Email" class="text-decoration-none">@user.Email</a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No email</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (!string.IsNullOrEmpty(user.Role))
                                        {
                                            var badgeClass = user.Role.ToLower() switch
                                            {
                                                "admin" => "badge-danger",
                                                "eventmanager" => "badge-warning",
                                                "user" => "badge-primary",
                                                _ => "badge-secondary"
                                            };
                                            <span class="badge @badgeClass">@user.Role</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">User</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge badge-info">@user.TotalRegistrations</span>
                                    </td>
                                    <td class="text-center">
                                        @if (user.UpcomingEvents > 0)
                                        {
                                            <span class="badge badge-success">@user.UpcomingEvents</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">0</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (user.LastActivity.HasValue)
                                        {
                                            <div>@user.LastActivity.Value.ToString("MMM dd, yyyy")</div>
                                            <small class="text-muted">@user.LastActivity.Value.ToString("h:mm tt")</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-page="/Users/Details" asp-route-id="@user.UserID" class="btn btn-outline-primary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-page="/Users/Edit" asp-route-id="@user.UserID" class="btn btn-outline-warning" title="Edit User">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-page="/Users/Delete" asp-route-id="@user.UserID" class="btn btn-outline-danger" title="Delete User">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-users-slash fa-4x text-muted mb-3"></i>
                    <h4>No Users Found</h4>
                    <p class="text-muted">No users match your search criteria.</p>
                    <a asp-page="/Users/Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create First User
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize DataTable for better sorting and filtering
        $(document).ready(function() {
            if ($('#usersTable').length) {
                $('#usersTable').DataTable({
                    "pageLength": 15,
                    "order": [[ 0, "asc" ]], // Sort by name ascending
                    "responsive": true,
                    "language": {
                        "search": "Search users:",
                        "lengthMenu": "Show _MENU_ users per page",
                        "info": "Showing _START_ to _END_ of _TOTAL_ users"
                    }
                });
            }
        });
    </script>
}

@section Styles {
    <style>
        .avatar {
            width: 2rem;
            height: 2rem;
            position: relative;
            display: inline-flex;
        }
        
        .avatar-initial {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.875rem;
            font-weight: 600;
        }
        
        .card-body {
            flex: 1 1 auto;
            min-height: 1px;
            padding: 1.25rem;
        }
    </style>
} 