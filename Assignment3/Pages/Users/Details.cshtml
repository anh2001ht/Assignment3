@page "{id:int}"
@model Assignment3.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "User Details";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-user"></i> User Details</h2>
            <p class="text-muted">View comprehensive user information and activity</p>
        </div>
        <div class="btn-group" role="group">
            <a asp-page="/Users/Edit" asp-route-id="@Model.UserDetails.UserID" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit User
            </a>
            <a asp-page="/Users/Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <!-- User Information Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fas fa-user"></i> User Profile</h5>
                </div>
                <div class="card-body text-center">
                    <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                         style="width: 100px; height: 100px; font-size: 2.5rem;">
                        <i class="fas fa-user"></i>
                    </div>
                    <h4>@Model.UserDetails.FullName</h4>
                    <p class="text-muted">@@@Model.UserDetails.Username</p>
                    
                    @if (!string.IsNullOrEmpty(Model.UserDetails.Role))
                    {
                        var badgeClass = Model.UserDetails.Role.ToLower() switch
                        {
                            "admin" => "badge-danger",
                            "eventmanager" => "badge-warning",
                            "user" => "badge-primary",
                            _ => "badge-secondary"
                        };
                        <span class="badge @badgeClass">@Model.UserDetails.Role</span>
                    }

                    @if (!string.IsNullOrEmpty(Model.UserDetails.Email))
                    {
                        <div class="mt-3">
                            <p class="mb-1"><i class="fas fa-envelope"></i> Email</p>
                            <a href="mailto:@Model.UserDetails.Email" class="text-decoration-none">@Model.UserDetails.Email</a>
                        </div>
                    }

                    <div class="mt-3">
                        <p class="mb-1"><i class="fas fa-id-card"></i> User ID</p>
                        <span class="text-muted">#@Model.UserDetails.UserID</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="card bg-info text-white">
                        <div class="card-body text-center">
                            <h3>@Model.UserDetails.TotalRegistrations</h3>
                            <p class="mb-0">Total Registrations</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="card bg-success text-white">
                        <div class="card-body text-center">
                            <h3>@Model.UserDetails.UpcomingEvents</h3>
                            <p class="mb-0">Upcoming Events</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body text-center">
                            <h3>@Model.UserDetails.PastEvents</h3>
                            <p class="mb-0">Past Events</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="card bg-secondary text-white">
                        <div class="card-body text-center">
                            <h3>
                                @if (Model.UserDetails.LastActivity.HasValue)
                                {
                                    @Model.UserDetails.LastActivity.Value.ToString("MMM dd")
                                }
                                else
                                {
                                    <span>Never</span>
                                }
                            </h3>
                            <p class="mb-0">Last Activity</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Registered Events -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-calendar-alt"></i> Event Registration History</h5>
                </div>
                <div class="card-body">
                    @if (Model.UserDetails.RegisteredEvents.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped" id="eventsTable">
                                <thead>
                                    <tr>
                                        <th>Event</th>
                                        <th class="text-center">Date</th>
                                        <th class="text-center">Category</th>
                                        <th class="text-center">Attendees</th>
                                        <th class="text-center">Status</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var eventItem in Model.UserDetails.RegisteredEvents)
                                    {
                                        var now = DateTime.Now;
                                        var status = "Unknown";
                                        var statusClass = "badge-secondary";

                                        if (eventItem.StartTime > now)
                                        {
                                            status = "Upcoming";
                                            statusClass = "badge-success";
                                        }
                                        else if (eventItem.StartTime <= now)
                                        {
                                            status = "Past";
                                            statusClass = "badge-info";
                                        }

                                        <tr>
                                            <td>
                                                <strong>@eventItem.Title</strong>
                                            </td>
                                            <td class="text-center">
                                                @eventItem.StartTime.ToString("MMM dd, yyyy")
                                                <br />
                                                <small class="text-muted">@eventItem.StartTime.ToString("h:mm tt")</small>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge badge-primary">@eventItem.CategoryName</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge badge-info">@eventItem.AttendeeCount</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge @statusClass">@status</span>
                                            </td>
                                            <td class="text-center">
                                                <a asp-page="/Events/Details" asp-route-id="@eventItem.EventID" class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h5>No Event Registrations</h5>
                            <p class="text-muted">This user hasn't registered for any events yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5><i class="fas fa-cog"></i> User Management Actions</h5>
                    <div class="btn-group" role="group">
                        <a asp-page="/Users/Edit" asp-route-id="@Model.UserDetails.UserID" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit User
                        </a>
                        @if (!string.IsNullOrEmpty(Model.UserDetails.Email))
                        {
                            <a href="mailto:@Model.UserDetails.Email" class="btn btn-info">
                                <i class="fas fa-envelope"></i> Send Email
                            </a>
                        }
                        <a asp-page="/Users/Delete" asp-route-id="@Model.UserDetails.UserID" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete User
                        </a>
                        <a asp-page="/Users/Index" class="btn btn-secondary">
                            <i class="fas fa-list"></i> Back to Users
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            if ($('#eventsTable').length) {
                $('#eventsTable').DataTable({
                    "pageLength": 10,
                    "order": [[ 1, "desc" ]], // Sort by date descending
                    "responsive": true
                });
            }
        });
    </script>
} 