@page
@model Assignment3.Pages.Categories.CreateModel
@{
    ViewData["Title"] = "Create Category";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1">Create Category</h2>
                    <p class="text-muted">Add a new event category to organize events</p>
                </div>
                <a asp-page="./Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Categories
                </a>
            </div>

            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @ViewData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row justify-content-center">
                <div class="col-lg-8 col-xl-6">
                    <div class="card shadow">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-folder-plus me-2"></i>Category Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                
                                <div class="mb-3">
                                    <label asp-for="CreateCategory.CategoryName" class="form-label fw-bold">
                                        Category Name <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="CreateCategory.CategoryName" class="form-control" 
                                           placeholder="Enter category name (e.g., Technology, Health, Business)" />
                                    <span asp-validation-for="CreateCategory.CategoryName" class="text-danger"></span>
                                    <div class="form-text">
                                        Choose a descriptive name for your category. This will help users find related events.
                                    </div>
                                </div>

                                <div class="alert alert-info" role="alert">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>Category Guidelines:</strong>
                                    <ul class="mb-0 mt-2">
                                        <li>Category names should be descriptive and unique</li>
                                        <li>Use title case (e.g., "Web Development" instead of "web development")</li>
                                        <li>Keep names concise but clear</li>
                                        <li>Categories help users filter and find events of interest</li>
                                    </ul>
                                </div>

                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a asp-page="./Index" class="btn btn-secondary me-md-2">
                                        <i class="fas fa-times me-2"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-plus-circle me-2"></i>Create Category
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 