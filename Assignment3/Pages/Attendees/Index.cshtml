@page
@model Assignment3.Pages.Attendees.IndexModel

@{
    ViewData["Title"] = "All Attendees";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-users"></i> All Event Attendees</h2>
            <p class="text-muted">Manage all event registrations</p>
        </div>
        <div>
            <a asp-page="/Events/Index" class="btn btn-primary">
                <i class="fas fa-calendar"></i> View Events
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h3>@Model.Attendees.Count</h3>
                    <p class="mb-0">Total Registrations</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3>@Model.Attendees.Where(a => a.Event != null && a.Event.StartTime > DateTime.Now).Count()</h3>
                    <p class="mb-0">Upcoming Events</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h3>@Model.Attendees.Select(a => a.EventID).Distinct().Count()</h3>
                    <p class="mb-0">Events with Attendees</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h3>@Model.Attendees.Where(a => a.RegistrationTime >= DateTime.Today.AddDays(-30)).Count()</h3>
                    <p class="mb-0">This Month</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-header">
            <h5><i class="fas fa-search"></i> Search & Filter</h5>
        </div>
        <div class="card-body">
            <form method="get">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Search</label>
                            <input asp-for="SearchTerm" class="form-control" placeholder="Search by name, email, or event..." />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Event</label>
                            <select asp-for="EventFilter" asp-items="@(new SelectList(Model.Events, "EventID", "Title"))" class="form-control">
                                <option value="">All Events</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Registration Date</label>
                            <select asp-for="DateFilter" class="form-control">
                                <option value="">All Time</option>
                                <option value="today">Today</option>
                                <option value="week">This Week</option>
                                <option value="month">This Month</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary btn-block">
                                    <i class="fas fa-search"></i> Search
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Attendees List -->
    <div class="card">
        <div class="card-header">
            <h5><i class="fas fa-list"></i> Event Attendees (@Model.Attendees.Count total)</h5>
        </div>
        <div class="card-body">
            @if (Model.Attendees.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="attendeesTable">
                        <thead class="thead-dark">
                            <tr>
                                <th><i class="fas fa-user"></i> Attendee</th>
                                <th><i class="fas fa-calendar-alt"></i> Event</th>
                                <th class="text-center"><i class="fas fa-clock"></i> Event Date</th>
                                <th class="text-center"><i class="fas fa-calendar-check"></i> Registration Date</th>
                                <th class="text-center"><i class="fas fa-info-circle"></i> Status</th>
                                <th class="text-center"><i class="fas fa-cog"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var attendee in Model.Attendees)
                            {
                                var now = DateTime.Now;
                                var status = "Unknown";
                                var statusClass = "badge-secondary";

                                if (attendee.Event != null)
                                {
                                    if (attendee.Event.StartTime.HasValue)
                                    {
                                        if (attendee.Event.StartTime.Value > now)
                                        {
                                            status = "Upcoming";
                                            statusClass = "badge-success";
                                        }
                                        else if (attendee.Event.EndTime.HasValue && attendee.Event.EndTime.Value < now)
                                        {
                                            status = "Completed";
                                            statusClass = "badge-info";
                                        }
                                        else
                                        {
                                            status = "In Progress";
                                            statusClass = "badge-warning";
                                        }
                                    }
                                }

                                <tr>
                                    <td>
                                        <div>
                                            <strong>@attendee.Name</strong>
                                            <br />
                                            <small class="text-muted">@attendee.Email</small>
                                            @if (attendee.User != null)
                                            {
                                                <br />
                                                <small class="text-info">@attendee.User.Username</small>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <strong>@(attendee.Event?.Title ?? "Unknown Event")</strong>
                                            @if (attendee.Event?.Category != null)
                                            {
                                                <br />
                                                <small class="text-muted">
                                                    <i class="fas fa-tag"></i> @attendee.Event.Category.CategoryName
                                                </small>
                                            }
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        @if (attendee.Event?.StartTime.HasValue == true)
                                        {
                                            <div>@attendee.Event.StartTime.Value.ToString("MMM dd, yyyy")</div>
                                            <small class="text-muted">@attendee.Event.StartTime.Value.ToString("hh:mm tt")</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">TBD</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (attendee.RegistrationTime.HasValue)
                                        {
                                            <div>@attendee.RegistrationTime.Value.ToString("MMM dd, yyyy")</div>
                                            <small class="text-muted">@attendee.RegistrationTime.Value.ToString("hh:mm tt")</small>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge @statusClass">@status</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            @if (attendee.Event != null)
                                            {
                                                <a asp-page="/Events/Details" asp-route-id="@attendee.Event.EventID" class="btn btn-outline-primary" title="View Event">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-page="/Attendees/EventAttendees" asp-route-id="@attendee.Event.EventID" class="btn btn-outline-info" title="Event Attendees">
                                                    <i class="fas fa-users"></i>
                                                </a>
                                            }
                                            @if (User.IsInRole("Admin") || User.IsInRole("EventManager"))
                                            {
                                                <form asp-page-handler="Delete" asp-route-id="@attendee.AttendeeID" method="post" style="display: inline;" onsubmit="return confirm('Are you sure you want to remove this attendee?')">
                                                    <button type="submit" class="btn btn-outline-danger" title="Remove Attendee">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-users-slash fa-4x text-muted mb-3"></i>
                    <h4>No Attendees Found</h4>
                    <p class="text-muted">No attendees match your search criteria.</p>
                    <a asp-page="/Events/Index" class="btn btn-primary">
                        <i class="fas fa-calendar"></i> View Events
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize DataTable for better sorting and filtering
        $(document).ready(function() {
            if ($('#attendeesTable').length) {
                $('#attendeesTable').DataTable({
                    "pageLength": 15,
                    "order": [[ 3, "desc" ]], // Sort by registration date descending
                    "responsive": true,
                    "language": {
                        "search": "Search attendees:",
                        "lengthMenu": "Show _MENU_ attendees per page",
                        "info": "Showing _START_ to _END_ of _TOTAL_ attendees"
                    }
                });
            }
        });
    </script>
} 