@model Assignment3.ViewModels.ReportDashboardViewModel

@{
    ViewData["Title"] = "Reports Dashboard";
}

<div class="container-fluid">
    <!-- Dashboard Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1><i class="fas fa-chart-bar"></i> Reports Dashboard</h1>
            <p class="text-muted lead">Comprehensive analytics and insights for event management</p>
        </div>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-outline-primary" onclick="refreshDashboard()">
                <i class="fas fa-sync-alt"></i> Refresh
            </button>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-success dropdown-toggle" data-toggle="dropdown">
                    <i class="fas fa-download"></i> Export All
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="/Reports/ExportEventReport">
                        <i class="fas fa-calendar-alt"></i> Event Report
                    </a>
                    <a class="dropdown-item" href="/Reports/ExportAttendeeReport">
                        <i class="fas fa-users"></i> Attendee Report
                    </a>
                    <a class="dropdown-item" href="/Reports/ExportCategoryReport">
                        <i class="fas fa-tags"></i> Category Report
                    </a>
                    <a class="dropdown-item" href="/Reports/ExportUserActivity">
                        <i class="fas fa-user-chart"></i> User Activity
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Key Performance Indicators -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-gradient-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h2 class="mb-0">@Model.TotalEvents</h2>
                            <p class="mb-0">Total Events</p>
                            <small>
                                <i class="fas fa-arrow-up"></i> @Model.UpcomingEvents upcoming
                            </small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-calendar-alt fa-3x opacity-75"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark bg-opacity-25">
                    <a href="/Reports/EventReport" class="text-white text-decoration-none">
                        <small>View Details <i class="fas fa-arrow-right ml-1"></i></small>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card bg-gradient-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h2 class="mb-0">@Model.TotalAttendees</h2>
                            <p class="mb-0">Total Attendees</p>
                            <small>
                                <i class="fas fa-chart-line"></i> @Model.AverageAttendeesPerEvent avg/event
                            </small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-3x opacity-75"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark bg-opacity-25">
                    <a href="/Reports/AttendeeReport" class="text-white text-decoration-none">
                        <small>View Details <i class="fas fa-arrow-right ml-1"></i></small>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card bg-gradient-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h2 class="mb-0">@Model.TotalUsers</h2>
                            <p class="mb-0">Active Users</p>
                            <small>
                                <i class="fas fa-user-plus"></i> @Model.RegistrationsThisMonth this month
                            </small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-friends fa-3x opacity-75"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark bg-opacity-25">
                    <a href="/Reports/UserActivity" class="text-white text-decoration-none">
                        <small>View Details <i class="fas fa-arrow-right ml-1"></i></small>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card bg-gradient-warning text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h2 class="mb-0">@Model.TotalCategories</h2>
                            <p class="mb-0">Event Categories</p>
                            <small>
                                <i class="fas fa-star"></i> @Model.EventsThisMonth events this month
                            </small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-tags fa-3x opacity-75"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark bg-opacity-25">
                    <a href="/Reports/CategoryReport" class="text-white text-decoration-none">
                        <small>View Details <i class="fas fa-arrow-right ml-1"></i></small>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Action Cards -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-tachometer-alt"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="/Reports/EventReport" class="btn btn-outline-primary btn-lg btn-block">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="fas fa-calendar-alt fa-2x mr-3"></i>
                                    <div class="text-left">
                                        <div class="font-weight-bold">Event Report</div>
                                        <small>Detailed event analytics</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="/Reports/AttendeeReport" class="btn btn-outline-success btn-lg btn-block">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="fas fa-users fa-2x mr-3"></i>
                                    <div class="text-left">
                                        <div class="font-weight-bold">Attendee Report</div>
                                        <small>Registration insights</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="/Reports/CategoryReport" class="btn btn-outline-info btn-lg btn-block">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="fas fa-tags fa-2x mr-3"></i>
                                    <div class="text-left">
                                        <div class="font-weight-bold">Category Report</div>
                                        <small>Performance by category</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="/Reports/UserActivity" class="btn btn-outline-warning btn-lg btn-block">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="fas fa-user-chart fa-2x mr-3"></i>
                                    <div class="text-left">
                                        <div class="font-weight-bold">User Activity</div>
                                        <small>User engagement data</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Events Summary -->
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5><i class="fas fa-clock"></i> Recent Events</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentEvents.Any())
                    {
                        @foreach (var eventItem in Model.RecentEvents.Take(5))
                        {
                            <div class="media mb-3">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mr-3" 
                                     style="width: 40px; height: 40px;">
                                    <i class="fas fa-calendar"></i>
                                </div>
                                <div class="media-body">
                                    <h6 class="mb-1">@eventItem.Title</h6>
                                    <p class="mb-1 text-muted">@eventItem.CategoryName</p>
                                    <small class="text-muted">
                                        <i class="fas fa-clock"></i> @eventItem.StartTime.ToString("MMM dd, yyyy")
                                        | <i class="fas fa-users"></i> @eventItem.AttendeeCount attendees
                                    </small>
                                </div>
                            </div>
                        }
                        
                        <div class="text-center mt-3">
                            <a href="/Reports/EventReport" class="btn btn-outline-primary btn-sm">
                                View All Events <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No recent events found</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Category Performance -->
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5><i class="fas fa-chart-pie"></i> Category Performance</h5>
                </div>
                <div class="card-body">
                    @if (Model.CategoryStats.Any())
                    {
                        @foreach (var category in Model.CategoryStats.Take(5))
                        {
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="font-weight-bold">@category.CategoryName</span>
                                    <span class="badge badge-primary">@category.TotalAttendees</span>
                                </div>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar bg-primary" 
                                         style="width: @((double)category.TotalAttendees / Model.CategoryStats.Max(c => c.TotalAttendees) * 100)%"></div>
                                </div>
                                <small class="text-muted">@category.EventCount events</small>
                            </div>
                        }
                        
                        <div class="text-center mt-3">
                            <a href="/Reports/CategoryReport" class="btn btn-outline-primary btn-sm">
                                View Category Report <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-tags fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No category data available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Monthly Trends Chart -->
    @if (Model.MonthlyStats.Any())
    {
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-chart-line"></i> Monthly Trends</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="monthlyTrendsChart" width="400" height="100"></canvas>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- System Information -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <h6 class="text-muted">Last Updated</h6>
                            <p class="mb-0">@DateTime.Now.ToString("MMM dd, yyyy HH:mm")</p>
                        </div>
                        <div class="col-md-3">
                            <h6 class="text-muted">Data Range</h6>
                            <p class="mb-0">All Time</p>
                        </div>
                        <div class="col-md-3">
                            <h6 class="text-muted">Report Version</h6>
                            <p class="mb-0">v2.1.0</p>
                        </div>
                        <div class="col-md-3">
                            <h6 class="text-muted">Next Update</h6>
                            <p class="mb-0">Real-time</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chart.js for charts -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    $(document).ready(function() {
        // Initialize monthly trends chart if data is available
        @if (Model.MonthlyStats.Any())
        {
            <text>initializeMonthlyTrendsChart();</text>
        }
    });

    function initializeMonthlyTrendsChart() {
        const ctx = document.getElementById('monthlyTrendsChart').getContext('2d');
        const data = {
            labels: [@Html.Raw(string.Join(",", Model.MonthlyStats.Select(m => $"'{m.Month}'")))],
            datasets: [{
                label: 'Events',
                data: [@Html.Raw(string.Join(",", Model.MonthlyStats.Select(m => m.EventsCount)))],
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 2,
                fill: true,
                tension: 0.4
            }, {
                label: 'Registrations',
                data: [@Html.Raw(string.Join(",", Model.MonthlyStats.Select(m => m.RegistrationsCount)))],
                backgroundColor: 'rgba(255, 99, 132, 0.2)',
                borderColor: 'rgba(255, 99, 132, 1)',
                borderWidth: 2,
                fill: true,
                tension: 0.4
            }]
        };

        new Chart(ctx, {
            type: 'line',
            data: data,
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Events and Registrations Trend Over Time'
                    },
                    legend: {
                        position: 'bottom'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Count'
                        }
                    }
                }
            }
        });
    }

    function refreshDashboard() {
        // Add loading animation
        const refreshBtn = $('button[onclick="refreshDashboard()"]');
        const originalHtml = refreshBtn.html();
        refreshBtn.html('<i class="fas fa-spinner fa-spin"></i> Refreshing...');
        refreshBtn.prop('disabled', true);
        
        // Simulate refresh delay
        setTimeout(() => {
            location.reload();
        }, 1500);
    }

    function generatePredictiveReport() {
        alert('Predictive Analytics Report\n\nThis advanced feature would include:\n\n' +
              '• Future attendance predictions\n' +
              '• Optimal event scheduling recommendations\n' +
              '• Seasonal trend analysis\n' +
              '• Resource allocation forecasts\n' +
              '• Market opportunity identification\n\n' +
              'This feature would leverage machine learning algorithms to provide actionable insights.');
    }

    function generateRecommendations() {
        alert('Smart Recommendations System\n\nAI-powered insights would include:\n\n' +
              '• Best time slots for different event types\n' +
              '• Optimal venue capacity recommendations\n' +
              '• Target audience suggestions\n' +
              '• Pricing optimization strategies\n' +
              '• Marketing channel effectiveness\n' +
              '• User engagement improvement tips\n\n' +
              'These recommendations are based on historical data analysis and industry best practices.');
    }
</script>

<style>
