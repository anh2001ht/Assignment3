@page "{id:int}"
@model Assignment3.Pages.Attendees.RegisterModel

@{
    ViewData["Title"] = "Register for Event";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-user-plus"></i> Event Registration</h2>
            <p class="text-muted">Register for @Model.Input.EventTitle</p>
        </div>
        <div>
            <a asp-page="/Events/Details" asp-route-id="@Model.Input.EventID" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Event
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Event Information Card -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fas fa-calendar-alt"></i> Event Details</h5>
                </div>
                <div class="card-body">
                    <h4>@Model.Input.EventTitle</h4>
                    @if (!string.IsNullOrEmpty(Model.Input.EventDescription))
                    {
                        <p class="text-muted">@Model.Input.EventDescription</p>
                    }
                    
                    <div class="row">
                        <div class="col-md-6">
                            @if (Model.Input.StartTime.HasValue)
                            {
                                <p><i class="fas fa-clock text-primary"></i> <strong>Start:</strong> @Model.Input.StartTime.Value.ToString("MMM dd, yyyy HH:mm")</p>
                            }
                            @if (Model.Input.EndTime.HasValue)
                            {
                                <p><i class="fas fa-clock text-primary"></i> <strong>End:</strong> @Model.Input.EndTime.Value.ToString("MMM dd, yyyy HH:mm")</p>
                            }
                        </div>
                        <div class="col-md-6">
                            @if (!string.IsNullOrEmpty(Model.Input.Location))
                            {
                                <p><i class="fas fa-map-marker-alt text-primary"></i> <strong>Location:</strong> @Model.Input.Location</p>
                            }
                            @if (!string.IsNullOrEmpty(Model.Input.CategoryName))
                            {
                                <p><i class="fas fa-tags text-primary"></i> <strong>Category:</strong> @Model.Input.CategoryName</p>
                            }
                        </div>
                    </div>
                    
                    <div class="mt-2">
                        <strong>Current Attendees:</strong> @Model.Input.AttendeeCount
                    </div>
                </div>
            </div>

            <!-- Registration Form -->
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5><i class="fas fa-user-plus"></i> Registration Information</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> 
                            Please provide your registration details below.
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.Name" class="form-label">
                                <i class="fas fa-user"></i> Full Name
                            </label>
                            <input asp-for="Input.Name" class="form-control" placeholder="Enter your full name" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.Email" class="form-label">
                                <i class="fas fa-envelope"></i> Email Address
                            </label>
                            <input asp-for="Input.Email" class="form-control" placeholder="Enter your email address" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                            <small class="form-text text-muted">We'll use this to send you event updates</small>
                        </div>

                        <div class="alert alert-warning">
                            <h6><i class="fas fa-exclamation-triangle"></i> Registration Terms</h6>
                            <ul class="mb-0">
                                <li>Registration is free and confirms your attendance</li>
                                <li>You can unregister at any time before the event starts</li>
                                <li>You'll receive event updates and reminders via email</li>
                                <li>Please arrive 15 minutes before the event start time</li>
                            </ul>
                        </div>

                        <div class="form-group mt-4">
                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="fas fa-user-plus"></i> Register for Event
                                </button>
                                <a asp-page="/Events/Details" asp-route-id="@Model.Input.EventID" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Help Section -->
            <div class="card mt-3">
                <div class="card-body">
                    <h6><i class="fas fa-question-circle"></i> Need Help?</h6>
                    <p class="small mb-0">
                        If you have any questions about this event or need assistance with registration, 
                        please contact the event organizers or check the event details page.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 